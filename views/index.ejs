
<div class="landing-background">
</div>
<div class="home-heading text-center row">
  <div class="home-heading-wrapper col-sm-offset-2 col-sm-8">
    <h1 class="intro-message">Welcome, <%=req.user.username%></h1>
    <a class="btn btn-default" href="/entry/new">Create new entry</a>
    <a class="btn btn-default" href="/<%=req.user.username%>">View your bio</a>
    <a class="btn btn-default" href="/friends">View your friends</a>
  <div class="hueco"></div>
    <table class="table table-hover">
    <%if( typeof(entries) !== 'undefined' && entries.length > 0){%>
        <tr>
          <th colspan="3" class="logo-font-small">See how your friends Deliver!</th>
        </tr>
        <%entries.forEach(function(elem){ %>
          <tr>
                <td>
                  <h4>
                    <%var daysAgo = (new Date()).getDate() - elem.created_at.getDate();%>
                    <%if(daysAgo===0){%>Today<%}else{%>
                      <%=daysAgo%> day<%if(daysAgo>1){%>s<%}%> ago<%}%>, <%=elem._creator.username%>
                    <%if(elem.achieved){%><span class="delivered">delivered</span><%}else{%><span class="failed">failed</span><%}%> on his objective
                  </h4>
                </td>
                <td></td>
                <td><a href="/<%=elem._creator.username%>"><button class="btn btn-info col-xs-12">View bio</button></a></td>
          </tr>
        <%});%>
    <%};%>
  </table>

  </div>
</div>
