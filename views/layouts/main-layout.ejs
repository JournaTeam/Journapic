<html>
  <head>
    <meta charset="utf-8">
    <title>Journapic</title>
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/style.min.css">
    <script src="/bower_components/jquery/dist/jquery.min.js" type="text/javascript"></script>
  </head>
  <body>

    <nav class="navbar-header header navbar-fixed-top">
      <div class="container-fluid">
        <div class="col">
          <h1 class="logo-font"><a href="/" class="blue-letters">Deliver</a></h1>
          <ul class="navbar-nav navbar-right nav">
            <%if (typeof(req.user) === "undefined") {%>
            <li><a href="/login" class="blue-letters">Login</a></li>
            <%}%>
            <%if (typeof(req.user) === "undefined") {%>
            <li><a href="/signup" class="blue-letters">Signup</a></li>
            <%}%>
            <%if (typeof(req.user) !== "undefined") {%>
            <li>
              <form action="/logout" method="POST">
                <button class="btn btn-danger logout " type="submit">Logout</button>
              </form>
            </li>
            <%}%>
          </ul>
        </div>
      </div>
    </nav>
    <div class="hueco"></div>
    <% if (typeof(notifications)!=='undefined'){  %>
      <% notifications.forEach(function(elem){%>
        <div class="friend-request">
          <div class="friend-request-text">You have a new friendship request from <%=elem.requester.username%></div>
          <a href="/friends"><button name="review" class="btn btn-success right">Review</button></a>
        </div>
      <%})%>
    <%}%>
    <div class="main-container container-fluid">
      <%- body -%>
    </div>
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
  </body>
</html>
